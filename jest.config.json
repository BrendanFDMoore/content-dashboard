{
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      ".*\\.svg"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleDirectories": [
        "node_modules",
        "<rootDir>/src"
    ],
    "moduleNameMapper": {
        "@components": "<rootDir>/src/components",
        "@scenes": "<rootDir>/src/scenes",
        "\\.(css|jpg|png|svg)$": "<rootDir>/tests/stubs/empty-module.js"
    },
    "collectCoverageFrom": [
        "**/*.{js,jsx,ts,tsx}",
        "!**/*.spec.*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!tests/**",
        "!coverage/**",
        "!public/**"
    ]
}
